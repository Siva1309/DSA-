class Solution {
public:
    bool isPalindrome(string s,int i=0,int j=-1) {
        //int i = 0;
        if(j==-1) j = s.size()-1;

        while(i<j && !isalnum(s[i])) i++;
        while(i<j && !isalnum(s[j])) j--;

        if(i>=j) return true;

        if(tolower(s[i])!=tolower(s[j])) return false;
        //i++;
        return isPalindrome(s,i+1,j-1);
    }
};
